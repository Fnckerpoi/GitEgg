<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gitegg.service.extension.justauth.mapper.JustAuthSocialMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.gitegg.service.extension.justauth.entity.JustAuthSocial">
        <id column="id" property="id" />
        <result column="uuid" property="uuid" />
        <result column="source" property="source" />
        <result column="access_token" property="accessToken" />
        <result column="expire_in" property="expireIn" />
        <result column="refresh_token" property="refreshToken" />
        <result column="open_id" property="openId" />
        <result column="uid" property="uid" />
        <result column="access_code" property="accessCode" />
        <result column="union_id" property="unionId" />
        <result column="scope" property="scope" />
        <result column="token_type" property="tokenType" />
        <result column="id_token" property="idToken" />
        <result column="mac_algorithm" property="macAlgorithm" />
        <result column="mac_key" property="macKey" />
        <result column="code" property="code" />
        <result column="oauth_token" property="oauthToken" />
        <result column="oauth_token_secret" property="oauthTokenSecret" />
        <result column="tenant_id" property="tenantId" />
        <result column="create_time" property="createTime" />
        <result column="creator" property="creator" />
        <result column="update_time" property="updateTime" />
        <result column="operator" property="operator" />
        <result column="del_flag" property="delFlag" />
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, uuid, source, access_token, expire_in, refresh_token, open_id, uid, access_code, union_id, scope, token_type, id_token, mac_algorithm, mac_key, code, oauth_token, oauth_token_secret, tenant_id, create_time, creator, update_time, operator, del_flag
    </sql>

    <!-- 分页查询租户第三方登录功能配置表列表 -->
    <select id="queryJustAuthSocialList" resultType="com.gitegg.service.extension.justauth.dto.JustAuthSocialDTO" parameterType="com.gitegg.service.extension.justauth.dto.QueryJustAuthSocialDTO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_just_auth_social
        WHERE del_flag = 0
        <if test="justAuthSocial.uuid != null and justAuthSocial.uuid != ''">
            AND uuid = #{justAuthSocial.uuid}
        </if>
        <if test="justAuthSocial.source != null and justAuthSocial.source != ''">
            AND source = #{justAuthSocial.source}
        </if>
        <if test="justAuthSocial.beginDateTime != null and justAuthSocial.beginDateTime != ''">
            AND DATE_FORMAT(create_time,'%Y-%m-%d %H:%M:%S') &gt;= DATE_FORMAT(#{justAuthSocial.beginDateTime},'%Y-%m-%d %H:%M:%S')
        </if>
        <if test="justAuthSocial.endDateTime != null and justAuthSocial.endDateTime != ''">
            AND DATE_FORMAT(create_time,'%Y-%m-%d %H:%M:%S') &lt;= DATE_FORMAT(#{justAuthSocial.endDateTime},'%Y-%m-%d %H:%M:%S')
        </if>
        ORDER BY id DESC
    </select>
    <!-- 查询租户第三方登录功能配置表信息 -->
    <select id="queryJustAuthSocial" resultType="com.gitegg.service.extension.justauth.dto.JustAuthSocialDTO" parameterType="com.gitegg.service.extension.justauth.dto.QueryJustAuthSocialDTO">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_just_auth_social
        WHERE del_flag = 0
        <if test="justAuthSocial.uuid != null and justAuthSocial.uuid != ''">
            AND uuid = #{justAuthSocial.uuid}
        </if>
        <if test="justAuthSocial.source != null and justAuthSocial.source != ''">
            AND source = #{justAuthSocial.source}
        </if>
        <if test="justAuthSocial.beginDateTime != null and justAuthSocial.beginDateTime != ''">
            AND DATE_FORMAT(create_time,'%Y-%m-%d %H:%M:%S') &gt;= DATE_FORMAT(#{justAuthSocial.beginDateTime},'%Y-%m-%d %H:%M:%S')
        </if>
        <if test="justAuthSocial.endDateTime != null and justAuthSocial.endDateTime != ''">
            AND DATE_FORMAT(create_time,'%Y-%m-%d %H:%M:%S') &lt;= DATE_FORMAT(#{justAuthSocial.endDateTime},'%Y-%m-%d %H:%M:%S')
        </if>
        ORDER BY id DESC
    </select>
</mapper>
